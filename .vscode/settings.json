{
    "json.schemas": [
        {
            "fileMatch": [
                "/tools/build_resources/themes/*"
            ],
            "url": "/tools/build_resources/themes/validate.json"
        }
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.linting.flake8Path": "${workspaceFolder}/.venv/bin/pflake8",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true,
        "**/.coverage": true,
        "**/coverage.xml": true
    },
    "cSpell.words": [
        "AARRGGBB",
        "absolufy",
        "argb",
        "backticks",
        "cmpfiles",
        "codecov",
        "cxfreeze",
        "docstrings",
        "Duquesnoy",
        "filecmp",
        "icccm",
        "isort",
        "keysyms",
        "libegl",
        "libopengl",
        "libxcb",
        "libxkbcommon",
        "libyaml",
        "linebreak",
        "maxdepth",
        "ncipollo",
        "pflake",
        "pformat",
        "Pixmaps",
        "pydata",
        "pyinstaller",
        "pypi",
        "pyproject",
        "pyqt",
        "pyqtdarktheme",
        "pyright",
        "pyside",
        "pytest",
        "pytestqt",
        "PYTHONIOENCODING",
        "pyupgrade",
        "qdarktheme",
        "QLCD",
        "qproperty",
        "qresource",
        "qtbot",
        "qtpy",
        "randr",
        "RRGGBB",
        "RRGGBBAA",
        "snok",
        "testpypi",
        "venv",
        "virtualenvs",
        "xinerama",
        "yesqa"
    ],
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "black",
    "esbonio.sphinx.confDir": "${workspaceFolder}/docs/source",
    "restructuredtext.linter.rstcheck.executablePath": "rstcheck"
}
